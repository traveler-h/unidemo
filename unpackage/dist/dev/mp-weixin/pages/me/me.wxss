.center-top {
  display: flex;
  box-sizing: border-box;
  background-color: rgba(240, 240, 240, 0.7);
  border-radius: 10px;
}
.center-top image {
  width: 100px;
  height: 100px;
  object-fit: contain;
  border-radius: 50%;
  margin: 10px;
  flex-shrink: 0;
  border: 1px solid #aaa;
}
.center-top .desc {
  font-size: 14px;
  width: 100%;
  padding: 10px 0 10px 10px;
}
.center-top .desc .name {
  font-size: 16px;
  font-weight: bold;
}
.center-top .desc .base {
  font-size: 15px;
  font-weight: 500;
  margin: 10px 0;
  color: #aaa;
}
.center-top .desc .base text:first-child {
  margin-right: 40px;
}
.center-top .desc .intro {
  font-size: 12px;
  font-weight: 500;
  color: #aaaaaa;
}
