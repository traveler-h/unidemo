page {
  padding: 5px 10px;
  box-sizing: border-box;
  min-height: calc(100vh - 60px);
  background-color: rgba(220, 220, 220, 0.3);
}
.primary-btn {
  background: #8B0206;
  width: 150px;
  border-radius: 40px;
  color: #eeeeee;
}
.row-flex {
  display: flex;
  justify-content: center;
  align-items: center;
}
page {
  padding: 0;
  margin: 0;
}
.start {
  width: 100%;
  height: 100vh;
  position: relative;
}
.start .bg-image {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: -1;
  height: 100%;
  width: 100%;
}
.start .user-info .user-avatar {
  width: 100%;
  height: 60vh;
}
.start .user-info .user-avatar image {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  object-fit: contain;
}
.start .user-info .user-name {
  font-size: 20px;
  color: #eeeeee;
  width: 100%;
  text-align: center;
  display: block;
  margin-bottom: 2vh;
}
.start .login {
  width: 100%;
  height: 100%;
  position: relative;
  padding-top: 65vh;
}
